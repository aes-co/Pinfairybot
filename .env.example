# Telegram Bot Configuration
API_ID=your_telegram_api_id
API_HASH=your_telegram_api_hash
BOT_TOKEN=your_bot_token

# Optional: Force subscription channel
FORCE_SUB_CHANNEL=@your_channel

# Optional: Admin user ID for admin commands
ADMIN_USER_ID=your_user_id

# Optional: Database configuration
DB_FILE=bot_stats.db

# Optional: Download directory
DOWNLOADS_DIR=downloads

# Optional: Performance settings
DEFAULT_DAILY_QUOTA=100
RATE_LIMIT_SECONDS=3
MAX_BOARDS_PER_REQUEST=5

# Optional: Playwright settings
PLAYWRIGHT_BROWSERS_PATH=/opt/render/project/.cache/ms-playwright
PYTHONUNBUFFERED=1
